<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvisosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4E05E"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:text="Agenda"
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_height="match_parent"
        app:compactCalendarTargetHeight="350dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        app:compactCalendarTextSize="18sp"
        app:compactCalendarBackgroundColor="#FFFFFF"
        app:compactCalendarTextColor="#914630"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#7DBF5A"
        app:compactCalendarCurrentDayBackgroundColor="#3FBC36"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />

</FrameLayout>