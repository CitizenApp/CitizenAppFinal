<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="#70DCCA77"
    android:layout_height="match_parent"
    tools:context=".direccioneinformaciones.FragmentBuzon">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="#24BCAC"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="180dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:background="#F6F2F2"
        android:padding="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_content_paste_black_24dp"
            android:background="@drawable/backbox"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:textColor="#FFF"
            android:background="#2075DC"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Enviar Sugerencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo3"
        android:padding="5dp"
        android:layout_width="100dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/titulo"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="Dejanos tu sugerencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="17sp"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="y asi podremos mejorar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
