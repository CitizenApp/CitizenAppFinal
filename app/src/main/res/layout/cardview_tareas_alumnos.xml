        android:id="@+id/redocu">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/bb">

    </Button>




</androidx.cardview.widget.CardView>