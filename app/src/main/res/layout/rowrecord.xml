                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="112dp" />

                <TextView

                    android:layout_marginLeft="50dp"
